

        <!-- main-area -->
        <main>

          <!-- cart-area -->
          <div class="cart-area pt-100 pb-100">
              <div class="container">
                <h4 class="m-3" style="font-weight: 700">Aboutlar ro'yhati</h4> <br>
                  <div class="row">
                      <div class="col-12">
                          <div class="cart-wrapper">
                              <div class="table-responsive">
                                  <table class="table mb-0">
                                      <thead>
                                          <tr>
                                              <th  class="product-thumbnail">Name</th>
                                              <th style="width: 20%;" class="product-name">Title></th>
                                              <th style="width: 30%;"  class="product-thumbnail">Description</th>
                                              <th  class="product-thumbnail">Vaqti </th>
                                              <th style="width: 18%;" class="product-thumbnail">Parametr</th>
                                          </tr>
                                      </thead>
                                      <tbody>
                                        <% for(item of result) {%>
                                          <tr>
                                              
                                              <td class="product-name">
                                                  <h4><%= item.name%></h4>
                                              </td>  
                                              <td class="product-name">
                                                  <h4><%= item.title%></h4>
                                              </td>
                                              <td class="product-name">
                                                <h4><%= item.description%></h4>
                                                <td>
                                                  <%= moment(item.createdAt).format("DD-MM-YYYY") %>
                                                </td>
                           
                                            </td>
                                              <td style="
                                              display: flex;
                                              flex-direction: row;
                                              justify-content: space-around;
                                              align-items: center;
                                            ">
                                              
                                              <a class="btn btn-warning" href="<%=`/about/${item._id}`%>">
                                                <i class="fas fa-cog"></i>
                                              </a>
                                              <form method="POST" class="hidden-r" action="<%=`/about/${item._id}?_method=DELETE`%>">
                                                <button type="submit" class="btn btn-danger">
                                                  <i class="fa fa-trash"></i>
                                                </button>
                                              </form>
                                            </td>
                                          </tr>
                                          <%}%>
                                      </tbody>
                                  </table>
                              </div>
                              <div class="shop-cart-bottom mt-20">
                                  <div class="cart-coupon">
                                      <form action="#">
                                          <button  type="button", class="btn" data-toggle="modal"
                                          data-target=".bs-example-modal-lg">Create</button>
                                      </form>
                                  </div>
                              </div>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
          <!-- cart-area-end -->

      </main>
      <!-- main-area-end -->
<!-- main-area-end -->
